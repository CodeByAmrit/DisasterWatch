<%- include('../layouts/header', { 
    title: 'Alert Details',
    isAuthenticated: false,
    isAdmin: false,
    userInitials: ''
}); %>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if (alert) { %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <!-- Header -->
            <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <div>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                        <%= alert.severity_enum === 'SEVERE' ? 'bg-red-100 text-red-800' : 
                            alert.severity_enum === 'MODERATE' ? 'bg-yellow-100 text-yellow-800' : 
                            'bg-green-100 text-green-800' %>">
                        <%= alert.severity_enum || 'MINOR' %>
                    </span>
                    <h1 class="mt-2 text-2xl font-bold text-gray-900"><%= alert.title %></h1>
                </div>
                <div class="text-sm text-gray-500">
                    <i class="fas fa-calendar-alt mr-1"></i> <%= new Date(alert.event_time).toLocaleString() %>
                </div>
            </div>

            <!-- Alert Info -->
            <div class="px-6 py-4">
                <div class="flex flex-wrap gap-4 mb-6">
                    <div class="flex items-center">
                        <i class="fas fa-map-marker-alt text-gray-400 mr-2"></i>
                        <span class="text-gray-700"><%= alert.country %></span>
                    </div>
                    <% if (alert.link) { %>
                        <div class="flex items-center">
                            <i class="fas fa-globe text-gray-400 mr-2"></i>
                            <span class="text-gray-700"><a href="<%= alert.link %>" target="_blank">Details Link</a></span>
                        </div>
                    <% } %>
                    <% if (alert.source) { %>
                        <div class="flex items-center">
                            <i class="fas fa-newspaper text-gray-400 mr-2"></i>
                            <span class="text-gray-700">Source: <%= alert.source %></span>
                        </div>
                    <% } %>
                </div>

                <!-- Description -->
                <div class="prose max-w-none mb-6">
                    <h3 class="text-lg font-medium text-gray-900">Description</h3>
                    <p class="text-gray-700"><%= alert.description %></p>
                </div>

                <!-- Map -->
                <% if (alert.location && alert.location.x && alert.location.y) { %>
                    <div id="alert-map" class="h-64 w-full rounded-lg mb-6"></div>
                    <script>
                        const map = L.map('alert-map').setView([<%= alert.location.x %>, <%= alert.location.y %>], 6);
                        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                            attribution: '&copy; OpenStreetMap contributors'
                        }).addTo(map);
                        L.marker([<%= alert.location.x %>, <%= alert.location.y %>])
                            .addTo(map)
                            .bindPopup("<b><%= alert.title %></b><br><%= alert.country %>")
                            .openPopup();
                    </script>
                <% } else { %>
                    <div class="mt-6 h-64 bg-gray-100 rounded-lg flex items-center justify-center">
                        <div class="text-center">
                            <i class="fas fa-map-marked-alt text-3xl text-gray-400 mb-2"></i>
                            <p class="text-gray-500">Location Map Unavailable</p>
                        </div>
                    </div>
                <% } %>

                <!-- Safety Instructions -->
                <% if (alert.instructions) { %>
                    <div class="prose max-w-none mb-6">
                        <h3 class="text-lg font-medium text-gray-900">Safety Instructions</h3>
                        <p class="text-gray-700"><%= alert.instructions %></p>
                    </div>
                <% } %>
            </div>

            <!-- Footer -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                <a href="/dashboard" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
                </a>
            </div>
        </div>
    <% } else { %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h1 class="text-2xl font-bold text-gray-900">Alert Not Found</h1>
            </div>
            <div class="px-6 py-4">
                <p class="text-gray-700">The requested alert could not be found or may have been removed.</p>
                <div class="mt-4">
                    <a href="/dashboard" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                        <i class="fas fa-arrow-left mr-2"></i> Return to Dashboard
                    </a>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('../layouts/footer'); %>
